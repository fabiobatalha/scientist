{
  "name": "substance-scientist",
  "description": "A scientific editor and reader for JATS files.",
  "dependencies": {
    "lodash": "^4.2.1",
    "substance": "substance/substance#tool-fixes"
  },
  "devDependencies": {
    "babel-plugin-syntax-jsx": "^6.8.0",
    "babel-plugin-transform-es2015-modules-commonjs-simple": "^6.7.4",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "babel-preset-es2015-webpack": "^6.4.2",
    "babel-register": "^6.9.0",
    "babelify": "^7.3.0",
    "browserify": "substance/node-browserify#d3caeb6dcdaa97a258d099c7231a57f0f60ec876",
    "express": "4.13.4",
    "font-awesome": "4.5.0",
    "glob": "7.0.3",
    "gulp": "3.9.1",
    "gulp-eslint": "2.0.0",
    "gulp-file": "^0.3.0",
    "gulp-if": "2.0.1",
    "gulp-rename": "1.2.2",
    "gulp-sass": "2.3.1",
    "gulp-sourcemaps": "1.6.0",
    "gulp-tape": "0.0.9",
    "gulp-uglify": "1.5.3",
    "gulp-util": "3.0.7",
    "node-sass": "3.8.0",
    "tap-spec": "4.1.1",
    "tape": "4.5.1",
    "through2": "2.0.1",
    "vinyl-buffer": "1.0.0",
    "vinyl-source-stream": "1.1.0",
    "watchify": "^3.7.0",
    "yargs": "4.7.1"
  },
  "main": "main.js",
  "scripts": {
    "bundle": "gulp",
    "test": "gulp test",
    "app": "./node_modules/.bin/electron ."
  },
  "browserify": {
    "extensions": [
      ".js",
      ".jsx"
    ]
  },
  "babel": {
    "presets": [
      "es2015-webpack"
    ],
    "plugins": [
      [
        "transform-es2015-modules-commonjs-simple",
        {
          "noMangle": true,
          "addExports": true
        }
      ],
      "syntax-jsx",
      [
        "transform-react-jsx",
        {
          "pragma": "$$"
        }
      ]
    ],
    "ignore": [
      "node_modules",
      "substance/substance"
    ]
  },
  "version": "1.0.0-alpha"
}
